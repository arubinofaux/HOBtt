<table id="torrents_table" class="table table-striped">
    <thead class="red_bg">
        <tr>
            <th colspan="2">DL</th>
            <th>Name</th>
            <th>Size</th>
            <th>Files</th>
            <th><i class="icon-circle-arrow-up icon-white"></i></th>
            <th><i class="icon-circle-arrow-down icon-white"></i></th>
        </tr>
    </thead>
<% @torrent_files.each do |f| %>
    <tbody>
        <tr>
            <td><%= link_to 'magnet', magnet_uri_for(f.torrent) %></td>
            <td><%= link_to 'torrent', download_url(:id => f.id) %></td>
            <td><%= f.name %></td>
            <td><%= number_to_human_size(f.size, :prefix => :si, :precision => 2, :significant => false) %></td>
            <td><%= f.files_count %></td>
            <td><%= f.torrent.seeders.count %></td>
            <td><%= f.torrent.leechers.count %></td>
        </tr>
    </tbody>
<% end %>
</table>
