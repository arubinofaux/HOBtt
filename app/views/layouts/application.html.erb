<!DOCTYPE html>
<html>
<head>
  <title>Bttracker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
<% elsif flash[:notice] %>
    <p><%= flash[:notice] %></p>
<% end %>

<%= yield %>

</body>
</html>
